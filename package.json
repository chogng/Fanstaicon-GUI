{
  "name": "fantasticon",
  "version": "0.1.0",
  "description": "Icon font generation tool",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tancredi/fantasticon.git"
  },
  "keywords": [
    "icons",
    "fonts",
    "iconfonts",
    "svg",
    "vector"
  ],
  "author": "Tancredi Trugenberger",
  "bugs": {
    "url": "https://github.com/tancredi/fantasticon/issues"
  },
  "homepage": "https://github.com/tancredi/fantasticon#readme",
  "type": "module",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fantasticon": "bin/fantasticon"
  },
  "productName": "Fanstanicon",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest dev",
    "build": "rimraf dist && npm run ts",
    "ts": "tsup --dts --format esm,cjs src/index.ts src/cli/index.ts",
    "gui": "npm run build && electron gui/main.cjs",
    "gui:dev": "electron gui/main.cjs",
    "gui:icons": "node gui/scripts/gen-icons.mjs",
    "gui:node": "node gui/scripts/fetch-node.mjs",
    "dist:prep": "npm run build && npm run gui:icons && npm run gui:node",
    "dist:clean": "rimraf build/node build/node-cache build/node-tmp build/icon.png build/icon.ico build/icon.icns",
    "dist": "npm run dist:prep && electron-builder --publish never && npm run dist:clean",
    "dist:mac": "npm run dist:prep && electron-builder --mac --publish never && npm run dist:clean",
    "dist:mac:portable": "npm run dist:prep && electron-builder --mac zip --publish never && npm run dist:clean",
    "dist:win": "npm run dist:prep && electron-builder --win --publish never && npm run dist:clean",
    "dist:win:portable": "npm run dist:prep && electron-builder --win portable --publish never && npm run dist:clean",
    "build:package:cjs": "touch ./dist/cjs/package.json && echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json",
    "build:cjs": "tsc --project ./tsconfig.cjs.json && npm run build:package:cjs",
    "build:package:esm": "touch ./dist/esm/package.json && echo '{\"type\": \"module\"}' > ./dist/esm/package.json",
    "build:esm": "tsc --project ./tsconfig.json && npm run build:package:esm",
    "watch": "npm run ts -- --watch",
    "typecheck": "tsc --noEmit --project tsconfig.test.json --noEmit",
    "lint": "prettier --check .",
    "fix": "prettier --write ."
  },
  "build": {
    "appId": "com.fantasticon.gui",
    "productName": "Fanstanicon",
    "directories": {
      "output": "release"
    },
    "asar": false,
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "gui/**/*",
      "templates/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/node",
        "to": "node"
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "extraMetadata": {
      "main": "gui/main.cjs"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-setup-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable-${arch}.${ext}"
    }
  },
  "files": [
    "bin/fantasticon",
    "dist/**/*",
    "!dist/**/{__mocks__,__tests__}/",
    "templates/*.hbs"
  ],
  "prepublish": "build",
  "dependencies": {
    "case": "^1.6.3",
    "cli-color": "^2.0.4",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "handlebars": "^4.7.8",
    "slugify": "^1.6.6",
    "svg2ttf": "^6.0.3",
    "svgicons2svgfont": "^15.0.1",
    "ttf2eot": "^3.1.0",
    "ttf2woff": "^3.0.0",
    "ttf2woff2": "^8.0.0"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.6",
    "@types/glob": "^9.0.0",
    "@types/node": "^25.0.3",
    "@types/svg2ttf": "^5.0.3",
    "@types/svgicons2svgfont": "^14.0.0",
    "@types/ttf2eot": "^2.0.2",
    "@types/ttf2woff": "^2.0.4",
    "@types/ttf2woff2": "^6.0.0",
    "electron": "40.4.0",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.3",
    "sharp": "^0.34.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.test.json"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 22.0"
  }
}
